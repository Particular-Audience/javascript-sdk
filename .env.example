# Particular Audience API Configuration
# Copy this file to .env and fill in your credentials

# Required: Your PA API credentials
PA_CLIENT_ID=your_client_id_here
PA_CLIENT_SECRET=your_client_secret_here

# Required: PA API endpoints (get these from your PA representative)
PA_AUTH_ENDPOINT=https://YOUR_PA_AUTH_ENDPOINT_HERE
PA_API_ENDPOINT=https://YOUR_PA_API_ENDPOINT_HERE

# Optional: Server configuration
PORT=3000

# Optional: Token cache duration in seconds (default: 23 hours)
# PA_TOKEN_CACHE_TTL=82800